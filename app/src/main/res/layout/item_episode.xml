<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

       <LinearLayout
           android:layout_width="150dp"
           android:layout_height="100dp">
           <androidx.cardview.widget.CardView
               app:cardCornerRadius="10dp"
               android:layout_width="150dp"
               android:elevation="4dp"
               android:layout_height="100dp">
               <ImageView
                   android:id="@+id/ivEpisodeThumbnail"
                   android:layout_width="150dp"
                   android:layout_height="100dp"
                   android:scaleType="centerCrop" />
           </androidx.cardview.widget.CardView>

       </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvEpisodeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Episode Name"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvEpisodeOverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Episode Overview"
                android:maxLines="3"
                android:ellipsize="end"
                android:paddingTop="2dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvEpisodeAirDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Air Date"
                android:paddingTop="2dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvEpisodeVoteAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:paddingTop="2dp"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
