<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/season_poster"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_launcher_foreground"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/season_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Season Name"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/season_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overview"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/season_episode_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Episodes: 10"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/season_air_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aired on: 2024-11-01"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/season_vote_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating: 8.5"
        android:textSize="14sp"/>
    </LinearLayout>

    </LinearLayout>

</LinearLayout>
