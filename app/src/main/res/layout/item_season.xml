<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/season_poster"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop"
            android:contentDescription="Season Poster" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/season_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Season Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/season_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/season_episode_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Episodes: 10"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/season_air_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aired on: 2024-11-01"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/season_vote_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating: 8.5"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
